<form method="POST" action="/restaurants/new" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Add a Restaurant</h3>
  <div class="form-group">
    <label>Restaurant Name</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label>Category</label>
    <select class="selectpicker" name="category">
      <option>Pick a category</option>
      <option>Korean</option>
      <option>Barbeque</option>
      <option>Casual</option>
    </select>
  </div>
  <div class="form-group">
    <label>Relative Price</label>
    <select class="selectpicker" name="rating">
      <option>Pick a Rating</option>
      <option>1: Great</option>
      <option>2: Decent</option>
      <option>3: Terrible</option>
    </select>
  </div>
  <div class="form-group">
    <label>Restaurant Address</label>
    <input type="text" name="address" class="form-control">
  </div>
  <div class="form-group">
    <label>Open Time</label>
    <input type="time" name="openTime" class="form-control">
  </div>
  <div class="form-group">
    <label>Close Time</label>
    <input type="time" name="closeTime" class="form-control">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Add Restaturant</button>
  </div>
</form>
